{
  "root": true,
  "extends": ["plugin:prettier/recommended"],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", "tab"]
  },

  "eslint.options": {
    "useEslintrc": false,
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "browser": true,
      "jest": true
    }
  },
  "env": {
    "es6": true
  }
}
